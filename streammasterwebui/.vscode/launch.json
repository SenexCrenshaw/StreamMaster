{
  "version": "0.2.0",
  "configurations": [
    {
      "command": "npm start",
      "name": "Run npm start",
      "request": "launch",
      "type": "node-terminal",
    },
    {
      "command": "serve -s build",
      "name": "serve",
      "request": "launch",
      "type": "node-terminal"
    },
    {
    "type": "msedge",
    // "runtimeArgs": ["--auto-open-devtools-for-tabs"],
    "request": "launch",
    "name": "Launch Edge",
    "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}/src",
    "sourceMaps": true,
    "sourceMapPathOverrides": {
      "webpack:///./src/*": "${webRoot}/*"
    },
    "preLaunchTask": "Sleepdelay"
    },
    {
      "name": "Docker Node.js Launch",
      "type": "docker",
      "request": "launch",
      "preLaunchTask": "docker-run: debug",
      "platform": "node"
    }
  ],
  "compounds": [
    {
      "name": "Full stack",
      "configurations": [
        "Run npm start",
        "Launch Edge"
      ],
      "stopAll": true
    }
  ]
}
