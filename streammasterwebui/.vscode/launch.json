{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Vite: debug server-side",
      "type": "node-terminal",
      "request": "launch",
      "command": "npm run dev"
    },
    {
      "name": "Vite: debug client-side",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000"
    },
    {
      "name": "Vite: debug full stack",
      "type": "node-terminal",
      "request": "launch",
      "command": "npm run dev",
      "resolveSourceMapLocations": ["${workspaceFolder}/**", "!**/node_modules/**"],
      "serverReadyAction": {
        "pattern": "Local:.+(http://.+)",
        "uriFormat": "http://%s",
        "action": "debugWithEdge"
      }
    },
    {
      "type": "vscode-edge-devtools.debug",
      "request": "launch",
      "name": "Launch Microsoft Edge and open the Edge DevTools",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}"
    },
    {
      "command": "next start",
      "name": "Run npm start",
      "request": "launch",
      "type": "node-terminal"
    },
    {
      "command": "serve -s build",
      "name": "serve",
      "request": "launch",
      "type": "node-terminal"
    },
    {
      "type": "msedge",
      // "runtimeArgs": ["--auto-open-devtools-for-tabs"],
      "request": "launch",
      "name": "Launch Edge",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}",
      "sourceMaps": true,

      // "sourceMapPathOverrides": {
      //   "webpack:///./src/*": "${webRoot}/*"
      // },
      "preLaunchTask": "watcher"
    },
    {
      "name": "Docker Node.js Launch",
      "type": "docker",
      "request": "launch",
      "preLaunchTask": "docker-run: debug",
      "platform": "node"
    }
  ],
  "compounds": [
    {
      "name": "Full stack",
      "configurations": ["Run npm start", "Launch Edge"],
      "stopAll": true
    }
  ]
}
